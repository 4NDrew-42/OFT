# Base REST endpoint exposed via tunnel (e.g. Cloudflare)
NEXT_PUBLIC_API_URL=https://your-api-tunnel.example.com

# WebSocket endpoint forwarded through the tunnel
NEXT_PUBLIC_WS_URL=wss://your-websocket-tunnel.example.com

# ORION-CORE vector search endpoint
NEXT_PUBLIC_ORION_API_URL=https://your-orion-vector-tunnel.example.com

# Optional Vercel environment hint
NEXT_PUBLIC_VERCEL_ENV=production

# Toggle ORION analytics integration (set to false while backend is under construction)
NEXT_PUBLIC_ORION_ANALYTICS_ENABLED=true


# NextAuth (Google OAuth)
NEXTAUTH_URL=https://www.sidekickportal.com
# Generate a strong secret, e.g.: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Access Control (comma-separated list of allowed emails)
# If not set, defaults to hardcoded list in auth config
ALLOWED_EMAILS=jamesandrewklein@gmail.com,another.user@example.com

# PHASE 1 SECURITY: Single-User Authorization
# CRITICAL: Only this email can access chat and session APIs
# Must match the authenticated user's email exactly (case-insensitive)
AUTHORIZED_USER_EMAIL=jamesandrewklein@gmail.com

# Optional: Credentials login (for simple demo auth)
# If both are set, the username/password form will be enabled.
BASIC_USER=
BASIC_PASS=


# ORION-CORE integration (Fabric Bridge host)
NEXT_PUBLIC_ORION_API_URL=https://fabric.sidekickportal.com
NEXT_PUBLIC_CHAT_STREAM_URL=https://fabric.sidekickportal.com/api/chat-streaming
NEXT_PUBLIC_STATUS_URL=https://fabric.sidekickportal.com/api/system-status
NEXT_PUBLIC_OCR_URL=https://fabric.sidekickportal.com/api/ocr/receipt

# PHASE 1 SECURITY: JWT Configuration (HS256 signing)
# CRITICAL: Server-only variables - do NOT prefix with NEXT_PUBLIC
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ORION_SHARED_JWT_SECRET=your_64_byte_hex_secret_here
ORION_SHARED_JWT_AUD=orion-core
ORION_SHARED_JWT_ISS=https://www.sidekickportal.com

# AI Provider API Keys (for enhanced chat)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Development overrides
# NEXT_PUBLIC_ORION_API_URL=http://localhost:8089
# NEXT_PUBLIC_CHAT_STREAM_URL=http://localhost:8089/api/chat-streaming
# NEXT_PUBLIC_STATUS_URL=http://localhost:8089/api/system-status
# NEXT_PUBLIC_OCR_URL=http://localhost:8089/api/ocr/receipt
