# Base REST endpoint exposed via tunnel (e.g. Cloudflare)
NEXT_PUBLIC_API_URL=https://your-api-tunnel.example.com

# WebSocket endpoint forwarded through the tunnel
NEXT_PUBLIC_WS_URL=wss://your-websocket-tunnel.example.com

# ORION-CORE vector search endpoint
NEXT_PUBLIC_ORION_API_URL=https://your-orion-vector-tunnel.example.com

# Optional Vercel environment hint
NEXT_PUBLIC_VERCEL_ENV=production

# Toggle ORION analytics integration (set to false while backend is under construction)
NEXT_PUBLIC_ORION_ANALYTICS_ENABLED=true


# NextAuth (Google OAuth)
NEXTAUTH_URL=https://www.sidekickportal.com
# Generate a strong secret, e.g.: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
